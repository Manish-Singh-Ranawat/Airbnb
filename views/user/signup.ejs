<% layout('layouts/boilerplate') -%>

    <body>
        <div class="container-fluid ">

            <h3 class="offset-sm-2 pt-2 mb-3 text-dark-emphasis">Signup on Airbnb</h3>

            <form action="/signup" method="POST" class="needs-validation col-sm-7 col-md-7 col-lg-4 offset-sm-2" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label mb-1">Username </label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Enter Username"
                        required>
                    <div class="invalid-feedback">
                        Please provide a valid Username
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label mb-1">Email </label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email"
                        required>
                    <div class="invalid-feedback">
                        Please provide a valid Email
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label mb-1">Password </label>
                    <div class="d-flex align-items-center">
                        <input type="password" name="password" id="passwordInput" class="form-control me-3" placeholder="Enter Password"
                        required>
                        <i class="fa-regular fa-eye-slash" id="showPassBtn"></i>
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid Password
                    </div>
                </div>
               
                <div class="mb-4 d-flex justify-content-between">
                    <button class="btn btn-danger" type="submit">Signup</button>
                    <div>
                        <span class="pe-2">Already Registered! </span>
                        <a href="/login" class="link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover">Login</a>
                    </div>
                </div>
                
            </form>
        </div>
        <script src="/js/showPassword.js"></script>
    </body>